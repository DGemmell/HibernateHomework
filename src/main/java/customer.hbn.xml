<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "models.Customer" table = "customers">
        <id name = "id" type = "int" column = "id">
            <generator class="identity"/>
        </id>
        <property name = "id" column = "id" type = "int"/>
        <property name = "name" column = "name" type = "string"/>
        <property name = "address" column = "address" type = "string"/>
        <property name = "orderid" column = "order_id" type = "integer"/>

        <set name="customers" inverse="true" cascade="all" lazy="true">
            <key>
                <column name="customer_id" not-null="true" />
            </key>
            <one-to-many class="models.Order" />


        </set>
    </class>
</hibernate-mapping>